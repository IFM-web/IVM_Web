
@{
    ViewData["Title"] = "PreInvite Visitor";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor
}

<div class="row px-5">
    <input hidden id="Masking_Flag" value="@httpContextAccessor.HttpContext.Session.GetString("Masking_Flag")" />
    <div class="header my-3">

        <h3 class="text-center">Pre Invite History</h3>
    </div>

    <div class="col-md-3">
        <div class="form-group">
            <label>From Date</label>
            <input type="date" id="txtfromdate" class="form-control" />
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>To Date</label>
            <input type="date" id="txttodate" class="form-control" />
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group mt-4">
            <button class="btn btn-success" onclick="PreInviteHistory()">Search</button>
        </div>
    </div>

    <div class="container ">
        <div class="col-md-4 mt-4">
            <input type="text" class="form-control" id="filterInput" placeholder="Search Here.." />
        </div>
        <div class="table-responsive shadow-sm rounded">
            <table id="data-table" class="table table-striped align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>S. No.</th>
                        <th>Invite Code</th>
                        <th>Guest Name</th>
                        <th>Guest Phone</th>
                        <th>Guest Email</th>
                        <th>Address</th>

                        <th>Date</th>
                        <th>Time</th>

                        @* <th>Status</th> *@

                    </tr>
                </thead>
                <tbody id="content">
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/adminarea/preinvitevisitoradmin.js" asp-append-version="true"></script>