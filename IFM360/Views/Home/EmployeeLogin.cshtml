                                                <div class="row">
                                                    <div class="feild col-md-12">
                                                        <input  asp-for="EmailId" type="text" id="email" placeholder="Official Email ID" required="" />
                                                    </div>

                                                    <div class="feild col-md-12">
                                                        <input  asp-for="PIN" type="password" id="pass" placeholder="4 digit Login PIN" maxlength="4" onkeypress="return isNumberKey(event)" required="" />
