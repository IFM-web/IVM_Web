
@{
    ViewData["Title"] = "Create Admin";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}


<div class="row px-2 px-md-5">
    <div class="header my-3">
        <h3 class="text-center">Manage Admin</h3>
    </div>
    <div class="body mb-3">

        <input hidden value="@ViewBag.locationId" id="locationId" />
        <div class="form">
            <div class="row mt-4">
                <div class="col-md-6 mb-3">
                    <input hidden id="HidId" value="0" />
                    <label>Admin Email Id</label>
                    <input type="text" id="AdminEmailId" name="Admin Email Id" class="form-control mandatory">
                </div>

                <div class="col-md-6 mb-3">
                    <label>Admin Mobile Number</label>
                    <input type="text" id="adminmobnumber" name="Admin Mobile Number" class="form-control mandatory">
                </div>

                <div class="col-md-6 mb-3">
                    <label>Admin First Name</label>
                    <input type="text" id="adminfirstname" name="Admin First Name" class="form-control mandatory">
                </div>

                <div class="col-md-6 mb-3">
                    <label>Admin Last Name</label>
                    <input type="text" id="adminlastname" name="Admin Last Name" class="form-control mandatory">
                </div>

                <div class="col-md-6 mb-3">
                    <label>Admin Password</label>
                    <input type="text" id="adminPassword" name="Admin Password" class="form-control mandatory">
                </div>

                <div class="col-md-6 mb-3">
                    <label>Confirm Password</label>
                    <input type="text" id="ConfirmPassword" name="Confirm Password" class="form-control mandatory">
                </div>

               
                <div class="col-md-12 mt-4">

                    <a href="~/SuperAdmin/CreateAdminList/@ViewBag.locationId" id="btnname" class="btn btn-myColor">Show All Admin Logins</a>

                    <button onclick="addAdmin()" id="btnname" class="btn btn-myColor">Create Admin Login</button>
               
                </div>
            </div>
            @* <p>Below is the list of Department-</p>
            <hr /> *@

        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

<script src="~/js/SuperAdmin/CreateAdmin.js" asp-append-version="true"></script>
<script src="~/js/site.js"></script>






