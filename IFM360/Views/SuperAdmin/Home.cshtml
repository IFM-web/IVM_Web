@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<div class="m-md-2 m-3">
    <h3 class="text-center mb-2">Dashboard</h3>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <div class="container mt-4">
      
        <div class="row">
            <div class="col-md-4">
                <label>Select Office</label>
                <select class="form-control">
                    <option>Select Office</option>
                </select>
            </div>
            <div class="col-md-4">
                <label>View Pending CheckOuts</label>
                <input class="form-control" type="date" />
            </div>
            <div class="col-md-4">
               <button class="btn btn-myColor mt-4">Search</button>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-4">
                <input type="text" class="form-control" id="filterInput" placeholder="Search Here.." />
            </div>
            <div class="col-2">
                <button class="btn btn-success" onclick="Refresh()">Refresh</button>
            </div>
        </div>
        <div class="col-12 overflow-auto mt-2" id="PrintDiv"></div>
       <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>S. No.</th>
                        <th>Visitor Id</th>
                        <th>Visitor Name</th>
                        <th>Phone</th>
                        <th>Company</th>
                        <th>Type</th>
                        <th>Temperature</th>
                        <th>Check In</th>
                        <th>Status</th>
                        <th>Invited</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody id="content">
                </tbody>
            </table>
        </div> 
    </div>
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <img id="modalImage" src="" alt="Visitor Photo" class="img-fluid" style="max-height: 400px;" width="100%;" height="100%;">
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
